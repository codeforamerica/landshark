<div class="headerSmall headerAqua">
  <span class="headerText">Message</span>
</div>

<div class="row-fluid">
  <div class="span12">
    <table id="messages-table" class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Message text</th>
          <th>Message name</th>
        </tr>
      </thead>
      <tbody>
        <% Message.accessible_by(current_ability).organization(params[:organization_id]).all.each do |message| %>
        <tr>
          <td><%= radio_button_tag 'message_id', message.id, false, class: 'table-row-radio' %></td>
          <td><%= message.message_text %></td>
          <td><%= message.name %></td>
          <td>
          <%= link_to 'Edit', edit_admin_organization_message_path(@organization.id,message), :class=>'btn btn-mini' %>
          <%= link_to 'Delete', [:admin, @organization, message], method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger btn-mini' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <p>Need a new message? <a class="btn" data-toggle="modal" data-target="#new-message" href="#new-message">Create new message</a>
  </div>
</div>
