<%= simple_form_for [:admin, @organization, @reminder] do |f| %>
  <div class="row-fluid">
    <div class="span12" id="message">
      <% if @reminder.errors.any? %>
        <%= render 'form_errors' %>
      <% end %>

      <%= f.input :recipient_id, as: :hidden %><!-- adds the recipient_id as a param so we can add it manually -->

      <%= render 'message_table', :f => f %>
      <%= render 'add_message', :f => f %>
    </div><!-- message -->
  </div>

  <div class="row-fluid" id="recipients">
    <div class="span12">
      <%= render 'group_table', :f => f %>
      <%= render 'add_recipients', :f => f %>
    </div>
  </div><!-- recipients -->

  <div class="row-fluid" id="date-and-time">
    <div class="span12">
      <%= render 'add_datetime', :f => f %>
    </div>
  </div>

  <div class="row-fluid" id="submit">
    <div class="span12">
      <%= link_to "Cancel", admin_dashboard_path(@organization.id) %>
      <%= f.submit "Schedule Reminder", :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %> <!-- /form -->
