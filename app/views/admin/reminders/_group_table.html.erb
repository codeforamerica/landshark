<div class="headerSmall headerAqua">
  <h3>Select Recipient Group</h3>
</div>
<div class="row-fluid">
  <div class="span12">
    <table class="table table-hover datatable" id="add-groups">
      <thead>
        <tr>
          <th></th>
          <th>Group Name</th>
          <th>Recipients</th>
        </tr>
      </thead>
      <tbody>
        <% Group.accessible_by(current_ability).organization(params[:organization_id]).all.each do |group| %>
        <tr>
          <td><%= check_box_tag "group_ids[]", group.id, false, :class => 'table-row-checkbox' %></td>
          <td><%= link_to group.name, admin_organization_group_path(@organization,group) %></td>
          <td><%= link_to group.recipients.count, admin_organization_group_path(@organization,group) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <p>Need to create a new group?
    <a data-toggle="modal" data-target="#individual-recipients" href="#individual-recipients">Create Group</a></p>
  </div>
</div>
