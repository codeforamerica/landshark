<%= simple_form_for [:admin, @organization] do |f| %>
  <%= f.input :name, inline_label: "Name" %>
  <% f.association :users, as: :check_boxes, label: "Users" %>
 <div class="row-fluid">
  <div class="span12">
    <table class="table table-hover datatable" id="add-groups">
      <thead>
        <tr>
          <th>Add to Organziation</th>
          <th>Name</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <%= simple_form_for :user do |user| %>
        <tr>
          <td><%= user.check_box :id, :class => 'table-row-checkbox' %></td>
          <td><%= user.label :name %></td>
          <td><%= render 'roles', :f => user %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  
  <%= f.button :submit %>
<% end %>
