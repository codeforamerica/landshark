  <div class="row-fluid">
    <div class="headerSmall">
      <span class="headerText headerDate"><%= DateTime.now.strftime("%B %Y") %></span>
    </div>
    <div class="span2">
      <div class="upcoming-number">
        <div class="big-number"><%= Reminder.upcoming.count %></div>
        <div>Upcoming Reminders</div>
      </div>
    </div>
    <div class="conversation span8">
      <%= render 'admin/superdashboard/upcoming_reminders' || 'There are no upcoming reminders' %>
    </div>
  </div>
  <div class="row-fluid headerBorder">
    <div class="headerSmall">
      <span class="headerText headerDate"><%= DateTime.now.strftime("%B %Y") %></span>
    </div>
    <div class="number span2">
      <p><h1><%= @last_month %></h1><%= 'Text'.pluralize( @last_month) %> Sent</p>
    </div>
    <div class="number span2">
      <p><h1><%= Conversation.month_calls.count %></h1>Call <%= 'Response'.pluralize( Conversation.month_calls.count) %></p>
    </div>
    <div class="number span2">
      <p><h1><%= @conversations.count %></h1>Text <%= 'Response'.pluralize( @conversations.count) %></p>
    </div>
    <div class="number span2">
      <p><h1><%= Conversation.undelivered.count %></h1>Undelivered</p>
    </div>
  </div>
</div>