<div class="row-fluid">
  <div class="span12 pageHeader">
    <div class="headerBig headerAqua">
    <span class="headerText">Conversations</span>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <h1>Total calls: <%= @calls.count %></h1>
    <div class="tabbable"> <!-- Only required for left/right tabs -->
      <ul class="tabs" data-tab>
        <li class="tab-title active"><a href="#call">Calls</a></li>
        <li class="tab-title"><a href="#response">Responses</a></li>
        <li class="tab-title"><a href="#undelivered">Undelivered</a></li>
      </ul>
      <div class="tabs-content">
        <div class="content active" id="call">
          <%= render 'call', :collection => @calls || 'There are no calls.'%>
        </div>
        <div class="content" id="response">
          <%= render 'response', :collection => @responses || 'There are no responses.'%>
        </div>
        <div class="content" id="undelivered">
          <%= render 'undelivered', :collection => @undelivered || 'There are no undelivered reminders.' %>
        </div>
      </div>
    </div>
  </div>
</div>