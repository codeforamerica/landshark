<div class="container">
	<div class="row-fluid dumbPadding">
		<div class="span12 mainHeaderGreen">
			<span class="greenHighlight">Reminder</span>
		</div>
	</div>
  <div class="row-fluid">
  	<div class="span8">

			<div class="mainHeaderGray">
				<span class="grayHighlight">Reminder Preview</span>
			</div>
			<p><b><%= @reminder.name %></b></p>
			<p>
			  <span class="messagetext well"><%= @reminder.message_text %></span>
			</p>

				<div class="mainHeaderGray">
					<span class="grayHighlight">Date Created</span>
				</div>
				<p><%= @reminder.created_at %></p>

				<div class="mainHeaderGray">
					<span class="grayHighlight">Date Updated</span>
				</div>
				<p><%= @reminder.updated_at || "No updates" %></p>
			</div>

			</div>
			<div>
				<%= link_to 'Edit Reminder', edit_reminder_path(@reminder), :class => 'btn btn-primary' %>
				<%= link_to 'Back', reminders_path %>
			</div>
	</div>

</div>