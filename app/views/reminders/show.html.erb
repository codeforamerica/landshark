<div class="container">
	<div class="row-fluid dumbPadding">
		<div class="span12 mainHeaderGreen">
			<span class="greenHighlight">Reminder</span>
		</div>
	</div>
  <div class="row-fluid">
  	<div class="span8">
  		<div class="mainHeaderGray">
			<span class="grayHighlight">Reminder Date</span>
		</div>
		<p><%= @reminders.first.send_date.to_s(:date_format) %></p>
		<% @reminders.each do |reminder| %>
		<div>
			<span>
			<%= link_to number_to_phone(reminder.recipient.phone, :area_code => true), reminder.recipient %>
			</span>
		</div>
			<% end %>
	</div>
	</div>
		<div>
			<%= link_to 'Back', reminders_path %>
		</div>
	</div>
</div>