<%= render 'breadcrumb' %>
<% render 'sorting' %>

<div class="row-fluid">
  <div class="span12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Message Text</th>
          <th>Number of Recipients</th>
        </tr>
      </thead>
      <tbody>
        <% @reminders.each do |reminder| %>
        <tr>
          <td><%= link_to reminder.name, reminder %></td>
          <td><%= reminder.message_text %></td>
          <td></td>
          <td><%= link_to 'Edit', edit_reminder_path(reminder), :class=>'btn btn-mini' %>  <%= link_to 'Delete', reminder, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger btn-mini' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>




  <%= link_to 'Create reminder', new_reminder_path, :class => 'btn btn-primary' %>
  </div>
</div>

<script>
  $('.dropdown-toggle').dropdown()
</script>
