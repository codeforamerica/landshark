<div class="row-fluid">
  <div class="span8">
    <%= form_for @reminder.first do |f| %>
    
      <%= f.label :send_date, "Reminder date" %>
      <%= f.text_field :send_date, :class => 'dateSelect' %>
      <%= f.label :send_time, "Reminder time" %>
      <%= f.text_field :send_time, :value => '12:00pm' %>
      
        <div class="field">
        <div class="control-group">
          <%= f.label :message_id, "Available reminders", :class => 'control-label' %>
          <div class="controls">
            <%= f.collection_select :message_id, Message.all, :id, :name, {:prompt => 'Select a text message'} %>
          </div>
        </div>
      </div>
      <h4>or</h4>
      <div><%= link_to_add_fields "Create a new text message", f, :message %></div>
      <p>Reminder recipients</p>
        <% @reminder.each do |reminder| %>
          <%= f.collection_check_boxes :recipient_id, Recipient.where("id = ?", reminder.recipient.id), :id, :phone_or_name do |b| b.label(class: "checkbox") {b.check_box(class: "checkbox")+ b.text}
          end  %>
        <% end %>
      <div class="actions">
        <%= f.submit :class => 'btn btn-primary' %>
      </div>  
    </div>
    
  <% end %>
  </div>
