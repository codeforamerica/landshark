<div class="container">
  <div class="row-fluid">
    <p id="notice"><%= notice %></p>

    <p>
      <b>Phone:</b>
      <%= number_to_phone(@recipient.phone, :area_code => true) %>
    </p>


    <div class="span12">
      <div class="span12 mainHeaderAqua">
        <span class="aquaHighlight">Deliveries</span>
      </div>
        <ul class="unstyled">
          <%= render(:partial => 'deliveries', :collection => @recipient.deliveries, :as => :delivery) || 'You have no reminders' %>
        </ul>
    </div>

    <div class="span12">
      <div class="span12 mainHeaderGreen">
        <span class="greenHighlight">Conversations</span>
      </div>
        <% @recipient.conversations.each do |conversation| %>
          <p><b>Date sent:</b> <%= conversation.date.to_s(:date_format) %>
          <p><b>To number:</b> <%= number_to_phone(conversation.to_number) %></p>
          <p><b>Message:</b> <%= conversation.message %></p>
        <% end %>
    </div>

    <p>&nbsp;</p>

    <%= link_to 'Edit', edit_recipient_path(@recipient) %> |
    <%= link_to 'Back', recipients_path %>
  </div>
</div>