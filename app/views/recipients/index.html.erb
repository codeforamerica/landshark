  <div class="row-fluid">
  <h3>All recipients</h3>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Phone number</th>
            <th>Reminder date</th>
            <th>Report</th>
          </tr>
        </thead>
        <% @recipients.each do |recipient| %>
          <tr>
            <td><%= link_to recipient.phone, recipient %></td>
            <td><%= render(:partial => 'notifications', :collection => recipient.notifications, :as => :reminders) || 'You have no reminders' %></td>
            <td><%= render(:partial => 'reports', :collection => recipient.reports, :as => :reports) || 'You have no reports' %></td>
          <td><%= link_to 'Edit', edit_recipient_path(recipient), :class=>'btn btn-mini' %>  <%= link_to 'Delete', recipient, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger btn-mini' %></td>
          </tr>
          <% end %>
        </table>
        <div class="dumbPadding"><%= link_to 'New recipient', new_recipient_path, :class=>'btn btn-primary' %></div>
      </div>    
    </div>
    <div class="row-fluid">
      <div class="span5">
        <div class="well">
          <h3>Import users</h3>

          <%= form_tag import_recipients_path, multipart: true do %>
            <%= file_field_tag :file %>
            <%= submit_tag "Import", :class=>'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  
  

