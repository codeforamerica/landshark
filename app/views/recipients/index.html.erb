  <div class="row-fluid">
  <h3>All recipients</h3>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Phone number</th>
            <th>Reminders sent</th>
            <th>Reminder details</th>
            <th></th>
          </tr>
        </thead>
        <% @recipients.each do |recipient| %>
          <tr>
            <td><%= link_to number_to_phone(recipient.phone), recipient %></td>
            <td><%= recipient.deliveries.count || 'No reminders' %></td>
            <td><%= render(:partial => 'deliveries', :collection => recipient.deliveries, :as => :delivery) || 'No reminders yet' %></td>
            <td><%= link_to 'Edit', edit_recipient_path(recipient), :class=>'btn btn-mini' %>  <%= link_to 'Delete', recipient, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger btn-mini' %></td>
          </tr>
          <% end %>
        </table>
        <div class="dumbPadding"><%= link_to 'New recipient', new_recipient_path, :class=>'btn btn-primary' %></div>
      </div>    
    </div>
