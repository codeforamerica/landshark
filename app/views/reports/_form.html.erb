<%= form_for(@report) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <div class="control-group">
      <%= f.label :program_id, "Select a program for this report", :class => 'control-label' %>
      <div class="controls">
        <%= f.collection_select :program_id, Program.all, :id, :name %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="control-group">
      <%= f.label :report_type, "Form name of this report", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :report_type, :placeholder=>"QR-7, etc." %>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="control-group">
      <%= f.label :humanname, "Description of this report", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :humanname %>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="control-group">
      <%= f.fields_for :message do |message| %>
        <div class="control-group">
        <%= message.label :message_text, "Reminder message text", :class => 'control-label' %>
          <div class="controls">
            <%= message.text_area :message_text, :rows=>5 %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class=>'btn btn-primary' %>
  </div>
<% end %>
