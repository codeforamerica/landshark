<%= form_for(@message) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="control-group">
      <label class="control-label" for="reportName">Choose a report for the message</label>
      <div class="controls">
        <%= f.collection_select :report_id, Report.all, :id, :humanname %>
      </div>
      <span class="help-inline">
        <%= link_to 'Or create', new_report_path %>
      </span>
    </div>
  </div>
  <div class="field">
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </div>
  <div class="field">
    <%= f.label :messagetext %><br />
    <%= f.text_area :messagetext %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
